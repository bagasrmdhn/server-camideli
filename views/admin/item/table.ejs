<div
  class="tab-pane fade show active"
  id="show-item"
  role="tabpanel"
  aria-labelledby="show_item"
>
  <!-- DataTales Example -->
  <div class="card shadow mb-4 mt-2">
    <div class="card-header py-3">
      <!-- Button trigger modal -->
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table
          class="table table-bordered"
          id="dataTable"
          width="100%"
          cellspacing="0"
        >
          <thead>
            <tr>
              <th>No</th>
              <th>Item Name</th>
              <th>Item Price</th>
              <th>Item Stock</th>
              <th>Item Status</th>
              <th>Item Action</th>
            </tr>
          </thead>
          <tbody>
            <% item.forEach(function(Item, index) { %>
            <tr>
              <td><%= index+1 %></td>
              <td><%= Item.name %></td>
              <td><%= Item.price.toLocaleString() %></td>
              <td><%= Item.stock %></td>
              <td><%= Item.status %></td>
              <td>
                <form
                  action="/admin/item/<%= item[index].id
                %>/delete?_method=DELETE"
                  method="POST"
                >
                  <a
                    href="/admin/item/show-image/<%= item[index].id %>"
                    type="button"
                    class="btn btn-primary btn-circle btn-sm"
                    ><i class="fa fa-image"></i>
                  </a>
                  <a
                    href="/admin/item/<%= item[index].id %>"
                    class="btn btn-warning btn-circle btn-sm"
                    ><i class="fa fa-edit"></i>
                  </a>
                  <button
                    type="submit"
                    class="btn btn-danger btn-circle btn-sm"
                  >
                    <i class="fa fa-trash"></i>
                  </button>
                  <a
                    href="#"
                    type="button"
                    class="btn btn-success btn-circle btn-sm"
                    ><i class="fa fa-plus"></i
                  ></a>
                </form>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
