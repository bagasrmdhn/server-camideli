<!-- DataTales Example -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <!-- Button trigger modal -->
    <button
      type="button"
      class="btn btn-primary"
      data-toggle="modal"
      data-target="#add-modal"
    >
      Add
    </button>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table table-bordered"
        id="dataTable"
        width="100%"
        cellspacing="0"
      >
        <thead>
          <tr>
            <th>No</th>
            <th>Name</th>
            <th>Category Action</th>
          </tr>
        </thead>
        <tbody>
          <% category.forEach(function(Category, index) { %>
          <tr>
            <td><%= index+1 %></td>
            <td><%= Category.name %></td>
            <td>
              <form
                action="/admin/category/<%= category[index].id
              %>?_method=DELETE"
                method="POST"
              >
                <a
                  href="javascript:void()"
                  type="button"
                  class="btn btn-warning btn-circle btn-sm button-update"
                  data-id="<%= category[index].id %>"
                  data-name="<%= category[index].name %>"
                  ><i class="fa fa-edit"></i>
                </a>
                <button type="submit" class="btn btn-danger btn-circle btn-sm">
                  <i class="fa fa-trash"></i>
                </button>
              </form>
            </td>
          </tr>

          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</div>
