<div class="card shadow mb-4 mt-2">
  <div class="card-header">
    <a href="/admin/order" class="btn btn-primary">Back</a>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-4">
        <img
          src="http://server-camideli.yellowsandstravel.com/<%= order.payments.proofPayment %>"
          alt="img"
          style="width: 100%; display: block"
        />
        <div class="row ml-1">
          <form
            action="/admin/order/<%= order.id %>/confirmation?_method=PUT"
            method="POST"
          >
            <!-- <button type="submit" class="btn btn-success btn-sm">
              <i class="fas fa-check"></i>
              Confirmation
            </button> -->
            <select name="status" class="form-control">
              <option value="<%= order.payments.status %>">
                <%= order.payments.status %>
              </option>
              <option value="Proses">Proses</option>
              <option value="Success">Success</option>
              <option value="Reject">Reject</option>
            </select>
            <button type="submit" class="btn btn-success btn-sm mt-2">
              <!-- <i class="fas fa-check"></i> -->
              Update
            </button>
          </form>
          <!-- <form
            action="/admin/order/<%= order.id %>/reject?_method=PUT"
            method="POST"
            class="ml-2"
          >
            <button type="submit" class="btn btn-danger btn-sm">
              <i class="fas fa-times"></i>
              Reject
            </button>
          </form> -->
        </div>
      </div>
      <div class="col-md-8">
        <div class="table-responsive">
          <div class="d-flex row justify-content-between">
            <div class="col-md-6">
              <h5 class="font-weight-bold">Order Detail</h5>
            </div>
            <div class="col-md-6">
              <h5 class="font-weight-bold">Payment Detail</h5>
            </div>
          </div>
          <div class="d-flex row justify-content-between">
            <div class="col-md-6">
              <table class="table" width="100%" cellspacing="0">
                <thead>
                  <tr>
                    <th>Invoice</th>
                    <th>Order Date</th>
                    <th>Order Status</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td><%= order.invoice %></td>
                    <td>
                      <%= order.orderDate.toLocaleString().substr(0, 9) %>
                    </td>
                    <td><%= order.payments.status %></td>
                  </tr>
                </tbody>
              </table>
            </div>
            <div class="col-md-6">
              <table class="table" width="100%" cellspacing="0">
                <thead>
                  <tr>
                    <th>Bank From</th>
                    <th>Bank To</th>
                    <!-- <th>Account Number</th> -->
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td><%= order.payments.bankFrom %></td>
                    <td><%= order.payments.bankTo %></td>
                    <!-- <td><%= order.payments.accountNumber %></td> -->
                  </tr>
                </tbody>
              </table>
            </div>
          </div>

            <div class="col-md-12">
              <h5 class="font-weight-bold">Member Detail</h5>
            </div>
            <div class="col-md-12">
              <table class="table" width="100%" cellspacing="0">
                <thead>
                  <tr>
                    <th>Member Name</th>
                    <th>Phone Number</th>
                    <th>Email</th>
                    <th>Address</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>
                      <%= order.memberId.firstName + " " +
                      order.memberId.lastName %>
                    </td>
                    <td><%= order.memberId.phoneNumber %></td>
                    <td><%= order.memberId.email %></td>
                    <td><%= order.address %></td>
                  </tr>
                </tbody>
              </table>
            </div>

            <div class="col-md-12">
              <h5 class="font-weight-bold">Item Detail</h5>
            </div>
            <div class="col-md-12">
              <table class="table" width="100%" cellspacing="0">
                <thead>
                  <tr>
                    <th>Item Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                  </tr>
                </thead>
                <tbody>
                  <%for (let x = 0; x < order.items.length; x++) {%>
                  <tr>
                    <td><%= order.items[x].name %></td>
                    <td><%= order.items[x].price %></td>
                    <td><%= order.items[x].quantity %></td>
                    <td><%= order.items[x].totalPrice %></td>
                  </tr>
                  <%}%>
                  <tr>
                    <td colspan="3" align="right">Final Total:</td>
                    <td><%= order.total %></td>
                  </tr>
                </tbody>
              </table>
            </div>
        
        </div>
      </div>
    </div>
  </div>
</div>
