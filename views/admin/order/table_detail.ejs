<div class="card shadow mb-4 mt-2">
  <div class="card-header">
    <a href="/admin/order" class="btn btn-primary">Back</a>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-4">
        <img
          src="http://localhost:3000/<%= order.payments.proofPayment %>"
          alt="img"
          style="width: 100%; display: block"
        />
        <div class="row ml-1">
          <form
            action="/admin/order/<%= order.id %>/confirmation?_method=PUT"
            method="POST"
          >
            <!-- <button type="submit" class="btn btn-success btn-sm">
              <i class="fas fa-check"></i>
              Confirmation
            </button> -->
            <select name="status" class="form-control">
              <option value="<%= order.payments.status %>">
                <%= order.payments.status %>
              </option>
              <option value="Proses">Proses</option>
              <option value="Success">Success</option>
              <option value="Reject">Reject</option>
            </select>
            <button type="submit" class="btn btn-success btn-sm mt-2">
              <!-- <i class="fas fa-check"></i> -->
              Update
            </button>
          </form>
          <!-- <form
            action="/admin/order/<%= order.id %>/reject?_method=PUT"
            method="POST"
            class="ml-2"
          >
            <button type="submit" class="btn btn-danger btn-sm">
              <i class="fas fa-times"></i>
              Reject
            </button>
          </form> -->
        </div>
      </div>
      <div class="col-md-8">
        <div class="table-responsive">
          <table class="table" width="100%" cellspacing="0">
            <thead>
              <tr>
                <th>Member Name</th>
                <th>Bank From</th>
                <th>Item Name</th>
                <th>Quantity</th>
                <th>Total</th>
              </tr>
            </thead>
            <tbody>
              <%for(let x = 0; x < order.itemId.length; x++) { %>

              <tr>
                <td>
                  <%= order.memberId.firstName + " " + order.memberId.lastName
                  %>
                </td>
                <td><%= order.payments.bankFrom %></td>
                <td><%= order.itemId[x].name %></td>
                <td><%= order.itemId[x].quantity %></td>
                <td><%= order.total %></td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
